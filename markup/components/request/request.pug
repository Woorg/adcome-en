mixin request-eng(data)
    .request&attributes(attributes)#request
        .request__container.container
            .request__entry
                h2.request__title.title.title_reg Leave a request
                .request__text We will get in touch with you and answer <br/> all your questions

            form.request__form.form.form_en
                .form__row
                    .form__field
                        input.form__input(type="text" name="Name" value="" placeholder="Name")
                    .form__field
                        input.form__input.form__input_phone(type="text" name="Phone" value="" placeholder="Phone number")

                .form__bottom
                    input.form__submit.button.button_filled_white(type="submit" value="Discuss your project")

                    .form__note By clicking the "Discuss your project" button, <br/>you agree with the personal data processing policy.



        != pugHelpers.Icon.call(locals, {iconName: 'step-2-side-icon', className: 'request__icon request__icon_first'})

        picture.request__icon.request__icon_second
            source(type="image/webp", srcset="static/img/general/placeholder-image.webp", data-srcset="static/img/general/request-icon@2x.webp")
            source(type="image/png", srcset="static/img/general/placeholder-image.png", data-srcset="static/img/general/request-icon@2x.png")
            img.lazy.lazy( src="static/img/general/placeholder-image.webp", alt="Изображение", data-src="static/img/general/request-icon@2x.png")


